<div class="header-container">
  <h1>Articles</h1>
  <%= link_to "New Article", new_article_path, class: "btn btn-new-post" %>
</div>

<div class="article-preview-container">
  <% @articles.each do |article| %>
    <div class="article-preview">
      <h3><%= article.title %></h3>
      <p><%= article.body.truncate(120) %></p>
      <%= link_to "Read more", article, class: "btn btn-readmore" %>
    </div>
  <% end %>
</div>